<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TpFinalTUSI"
        tools:replace="android:allowBackup"
        tools:targetApi="31">

        <activity
            android:name=".activities.ActivityListCanje"
            android:exported="false"
            android:label="Lista_Canjes"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".activities.activity_punto_verde_canje"
            android:exported="false"
            android:label="Elegir_Punto_verde"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".adicionales.activity_canje_exitoso"
            android:exported="false"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".activities.activity_canjear_puntos"
            android:exported="false"
            android:label="Canjear_Puntos"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".activities.OlvidePassword"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/MainThemeWhite" />
        <!--
             TODO: Before you run your application, you need a Google Maps API key.

             To get one, follow the directions here:

                https://developers.google.com/maps/documentation/android-sdk/get-api-key

             Once you have your API key (it starts with "AIza"), define a new property in your
             project's local.properties file (e.g. MAPS_API_KEY=Aiza...), and replace the
             "YOUR_API_KEY" string in this file with "${MAPS_API_KEY}".
        -->
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".activities.MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps"
            android:screenOrientation="portrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".activities.DetalleNoticia"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".activities.DetalleReporte"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".activities.CerrarInforme"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".activities.HomeActivityAdmin"
            android:exported="false"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".activities.DetalleReporteAdmin"
            android:exported="false"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".activities.Registro"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".activities.Login"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/MainThemeWhite" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>