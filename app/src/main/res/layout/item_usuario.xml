<!-- item_usuario.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="10dp"
        android:src="@mipmap/img_person_perfile_foreground"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textViewNombreApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre y Apellido"
        android:textColor="@color/darkGrey"
        android:textSize="15sp"
        android:layout_toEndOf="@id/imageViewProfile"
        android:layout_alignTop="@id/imageViewProfile"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/textViewDNI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNI"
        android:textSize="15sp"
        android:textColor="@color/darkGrey"
        android:layout_below="@id/textViewNombreApellido"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/imageViewProfile"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mail@mail.com"
        android:textSize="15sp"
        android:textColor="@color/darkGrey"
        android:layout_below="@id/textViewDNI"
        android:layout_toEndOf="@id/imageViewProfile"/>
</RelativeLayout>
